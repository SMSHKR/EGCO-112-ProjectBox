{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Binary",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Og",
                "-Wall",
                "main.cpp",
                "load.cpp",
                "legacy.cpp",
                "menu.cpp",
                "box.cpp",
                "stage.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Color",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Os",
                "Reference/color.cpp"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build ASCII",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Os",
                "Reference/ASCII.cpp"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}